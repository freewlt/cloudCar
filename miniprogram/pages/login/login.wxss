/* pages/login.wxss */
page{
    height:100%;
}
.container{
    width: 100%;
    height: 100%;
    background:#f6f6f6;
}
.logoBox{
    width:100%;
    padding: 64rpx 0;
    text-align: center;
}
.logoBox image{
    width:212rpx;
    height:212rpx;
    border-radius:50%;
}
.loginBox{
    width: 90%;
    margin: 0 auto;
    background: #fff;
}
.loginBox .phoneBox{
    width:100%;
    border-top-left-radius:5px;
    border-top-right-radius:5px;
    display:inline-block;
    background:#fff;
    border: 1px solid rgba(233,233,233,1);
}
.loginBox .iconBox{
    display:inline-block;
    vertical-align: middle;
    width:13%;
    padding-right: 3%;
    text-align: right;
}
.loginBox .phoneBox .iconBox .iconPic{
    width: 35rpx;
    height:48rpx;
    padding-top: 10rpx;
}
.loginBox .codeBox .iconBox .iconPic{
    width: 44rpx;
    height:40rpx;
    padding-top: 10rpx;
}
.loginBox .codeBox{
    width:100%;
    border-bottom-left-radius:5px;
    border-bottom-right-radius:5px;
    display:inline-block;
    background:#fff;
    border: 1rpx solid rgba(233,233,233,1);
    border-top: 0;
}
.loginBox input{
    display:inline-block;
    vertical-align: middle;
    width: 83%;
    height: 129rpx;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(67,67,67,1);
}
.phcolor{
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(67,67,67,1);
}
.loginBox .codeBox .codeInput{
    width: 53%;
}
.loginBox .codeBox .getCode{
    display:inline-block;
    vertical-align: middle;
    width:178rpx;
    height:62rpx;
    line-height:62rpx;
    background: none;
    border:2rpx solid rgba(8,110,224,1);
    border-radius:5rpx;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(8,110,224,1);
}
.loginOptions{
    height: 28rpx;
}
.loginOptions .forget{
    display: inline-block;
    width:20%;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(148,148,148,1);
}
.loginOptions{
    width: 88%;
    margin: 0 auto;
    padding: 10rpx 0 60rpx;
}
.loginOptions .choose{
    display: inline-block;
    float: right;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(148,148,148,1);
}
.loginOptions .choose .check .wx-checkbox-input{
    display: inline-block;
    vertical-align: middle;
    width: 24rpx;
    height: 24rpx;
}
.loginOptions .choose .check .wx-checkbox-input.wx-checkbox-input-checked::before{
    width: 24rpx;
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    font-size:20rpx; /* 对勾大小 30rpx */
    color:#00A0E9; /* 对勾颜色 白色 */
    background: transparent;
    transform:translate(-50%, -50%) scale(1);
    -webkit-transform:translate(-50%, -50%) scale(1);  
}
.loginOptions .choose  text{
    display: inline-block;
    vertical-align: middle;

}
.btnArea{
    clear: both;
    width: 88%;
    margin: 0 auto;
}
.btnArea button{
    width: 100%;
    height:100rpx;
    background:rgba(8,110,224,1);
    border-radius:20rpx;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(255,255,255,1);
}