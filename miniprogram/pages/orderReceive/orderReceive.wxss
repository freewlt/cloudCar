/* pages/map/map.wxss */
navbar{
    width:100%;
}
page,.container{
    width:100%;
    height:100%;
}
map{
    width:100%;
    height:96%;
    height:calc(100% - 98rpx)
}
.content{
    /* position: absolute;
    bottom:0;
    left:0; */
    width:100%;
    background:#fff;
}
.listBox{
    clear: both;
    width: 100%;
    padding:20rpx 0;
    border-bottom:2rpx solid rgba(233,233,233,1);
}
.listShow{
    width:100%;
    margin-top:-40rpx;
}
.listBox .detail{
    display:flex;
    justify-content:space-around;
    align-items:center;
    padding: 0 5%;
}
.listBox text{
    display:block;
    width:100%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(155,155,155,1);
}
.listBox .detail .price{
    font-size:42rpx;
    color:rgba(255,61,0,1);
    text-align: right;
}
.listBox .detail .time{  
    font-size:32rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);  
    text-align: right;
}
.listBox .detailListBox{
    padding-top: 16rpx;
}
.addressBox .detail:nth-child(2){
    padding-top: 16rpx;
}
.addressBox .detail .addressPic{
    display: inline-block;
    vertical-align: middle;
    width:42rpx;
    height:38rpx;
    padding-right:10rpx;
}
.addressBox .detail .addressTxt{
    font-size:25rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(0,0,0,1);
}

.trangerBox{
    width:100%;
    padding:20rpx 0;
}
.tranger{
    display: block;
    width:0;
    height:0;
    margin:0 auto;
    border-top:21rpx solid #C9C9C9;
    border-right:21rpx solid transparent;
    border-left:21rpx solid transparent;
    border-bottom:21rpx solid transparent;
}
.trangerTran{
    transform: rotate(180deg);
}

.btnArea{
    clear: both;
    width: 90%;
    padding:20rpx 0;
    margin:0 auto;
    display: flex;
    justify-content: space-between;
}
.btnArea button{
    width:192rpx;
    height:100rpx;
    background:rgba(8,110,224,1);
    border-radius:20rpx;
    color:#fff;
}
.btnArea .again{
    width:268rpx;
    background:#FF3D00;
}

