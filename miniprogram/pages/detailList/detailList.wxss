/* pages/detailList/detailList.wxss */
.navBg{
    width: 100%;
    background:#f2f2f2;
}
.navBox{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    height: 98rpx;
    margin: 0 auto;
}
.navLf image{
    display: inline-block;
    vertical-align: middle;
    width: 22rpx;
    height: 37rpx;
}
.navLf text{
    display: inline-block;
    vertical-align: middle;
    padding-left: 10rpx;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(62,62,62,1);
}
.navCt text{
    font-size:40rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(0,0,0,1);
    font-weight: bold
}
.navRt text{
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    color:rgba(0,0,0,1);
    color:rgba(0,0,0,1);
    font-weight: bold
}

.content{
    width:100%;
}
.listBox{
    clear: both;
    width: 94%;
    margin-left:6%;
    padding:20rpx 0;
    border-bottom:2rpx solid rgba(233,233,233,1);
}
.listBox .titleName{
    display: block;
    width: 100%;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.listBox .inputDetail{
    width: 100%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(44,44,44,1);
}
.listBox .detail{
    display:flex;
    justify-content:space-around;
    align-items:center;
}
.listBox  .detail .arrow{
    width:15rpx;
    height:26rpx;
    padding: 0  26rpx 0;
}

.deliveryInfoBox .detailTop{
    display: flex;
    justify-content:space-between;

}
.deliveryInfoBox .detailTop text{
    width:50%;
    text-align: left;
}
.deliveryInfoBox .inputDetail text{
    display: block;
    padding-top: 10rpx;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(110,110,110,1);
}