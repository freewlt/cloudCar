/* pages/sysMes/sysMes.wxss */
navbar{
    width: 100%;
}


.topTabSwiper{
    width:100%;
    height: 88rpx;
    line-height: 88rpx;
    border-top: 1px solid #ccc;
    border-bottom: 2px solid #E9E9E9;
    zoom: 1;
    color:rgba(166,166,166,1);
    text-align: center;
}
.topTabSwiper:after{
    content: ""; 
    clear: both;
    display: block;
}
 .topTabSwiper .tabBox{
    display: flex;
    justify-content: space-between;
    width:96%;
    margin:0 auto;
    height: 100%;
    text-align: center;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
 }
.tabBorer{
    border-bottom: 2px solid #086EE0;
    color: #4188F1;
}
.swiper{
    width: 100%;
    height: 600px;
}
.swiper_con{
    text-align: center; 
    width: 100%; 
    height: 100%;
}
.listBox{
    clear: both;
    width: 94%;
    margin-left:6%;
    padding:20rpx 0;
    border-bottom:2rpx solid rgba(233,233,233,1);
}
.listBox .inputDetail{
    width: 100%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(44,44,44,1);
}
.listBox .detail{
    display:flex;
    justify-content:space-around; 
    align-items: flex-start;
    padding-right: 3%;
}

.listBox text{
    display:block;
    width:100%;
    text-align: left;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(111,111,111,1);
}
.listBox .txRt text{
    text-align: right;
}
.listBox .inputDetail text{
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(111,111,111,1);
}
.listBox .inputDetail .dispatcher{
    padding-top: 5rpx;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(44,44,44,1);
}
.listBox .address{
    width:100%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:bold;
    color:rgba(44,44,44,1);
    text-align:left;
}
.listBox .address text{
    display: inline;
    width: auto;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(44,44,44,1);
}
.handle{
    float: right;
    width:118rpx;
    height:30rpx;
    line-height:26rpx;
    padding:0;
    margin-top: 10rpx;
    background: none;
    border:2rpx solid rgba(65,136,241,1);
    font-size:22rpx;
    font-weight:400;
    background:#fff;
    border-radius:10rpx;
    font-family:MicrosoftYaHeiUI;
    color:rgba(65,136,241,1);
}