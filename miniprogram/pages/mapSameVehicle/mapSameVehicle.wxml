<!--pages/maps/maps.wxml-->
<navbar title="{{title}}" bind:myevent="onMyEvent"></navbar>
<view class="tui-map">
  <map id="map" longitude="{{currentLo}}" latitude="{{currentLa}}" scale="{{scale}}" markers="{{markers}}" polyline="{{polyline}}"  include-points="{{includePoints}}" show-location style="width: 100%; height: 100%;"></map>
</view>
<view class="tui-search-bottom {{show ? '' : 'tui-hide'}}">
  <view class="page-group">
   <view class="page-nav-list {{ currentTab == item.id ? 'active' : '' }}" wx:for="{{itemList}}" wx:key="{{carTypeIndex}}"  data-id="{{item.id}}" bindtap="goTo"> {{item.carType}}</view>
  </view>
  <view class="container">
    <form class="content" bindsubmit="formSubmit" bindreset="formReset">
        <view class="listBox" bindtap="getAddress" data-id='1'>
            <text class="titleName">起始地</text>
            <view class="detail">
                <input class="inputDetail" type="text" placeholder="请输入" placeholder-class="phcolor" value="{{startAddress}}" bindinput='getstartAddressValue' focus="{{focusStatus}}"/>
            </view>
        </view>
        <view class="listBox" bindtap="getAddress" data-id='2'>
            <text class="titleName">目的地</text>
            <view class="detail">
                <input class="inputDetail" type="text" placeholder="请输入" placeholder-class="phcolor" value="{{endAddress}}" bindinput='getendAddressValue' focus="{{focusStatus}}"/>
            </view>
        </view>
        
        <view class="listBox" bindchange="bindDateChange">
            <text class="titleName">时  间</text>
            <view class="detail">
                 <pickerYMDHM class="inputDetail" date = "{{date}}" disabled = "{{disabled}}" bind:onPickerChange="onPickerChange" startDate="{{startDate}}" endDate="{{endDate}}">
                </pickerYMDHM>
            </view>
        </view>
         <view class="listBox" >
            <text class="titleName">货物名称:</text> 
            <view class="detail">
                <input class="inputDetail" type="text" placeholder="请输入" placeholder-class="phcolor" value="{{goodsName}}" bindinput='getNameValue'/>
            </view>
        </view>
      <view class="listBox" data-id='2'>
            <text class="titleName">件  数:</text> 
            <view class="detail">
                <input class="inputDetail" type="number" placeholder="请输入"             placeholder-class="phcolor" value="{{piece}}" bindinput='getPieceValue'/>
            </view>
        </view>
          <view class="listBox" data-id='2'>
            <text class="titleName">重  量:</text> 
            <view class="detail">
                <input class="inputDetail" type="text" placeholder="请输入"             placeholder-class="phcolor" value="{{dunWeight}}"  bindinput='getDunValue'/>
            </view>
              <picker class="weight"  bindchange="weightBtn" value="{{dunWeighindex}}" range="{{dunWeightItemList}}">
                   {{dunWeightItemList[dunWeighindex]}}
               </picker>
        </view>
         <view class="listBox" data-id='2'>
            <text class="titleName">备注:</text> 
            <view class="detail">
                <input class="inputDetail" type="text" placeholder="请输入" placeholder-class="phcolor" value="{{memo}}" bindinput='getMemoValue'/>
            </view>
        </view>
        <view class="btnArea">
            <button class="submit" form-type="submit">{{partAmountName}}</button>
            <button class="emergencyState {{ emergencycurrentTab == true ? 'emergencyStateRed' : '' }}" bindtap="emergencyBtn">{{emergencyName}}</button>
        </view>
    </form>
</view> 
</view>
