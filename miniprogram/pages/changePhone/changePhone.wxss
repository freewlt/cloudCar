/* pages/changePhone/changePhone.wxss */
navbar{
    width: 100%;
}
.menuBox{
    width:90%;
    margin:0 auto;
}
.menuBox .list{
    display:flex;
    justify-content:space-around;
    align-items:center;
    width:100%;
    height:140rpx;
    border-bottom: 1rpx solid #E9E9E9;
}
.menuBox .list .txtBox{
    flex-grow:2
}
.menuBox .list .txtBox text{
    display:block;
    width:100%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:#9B9B9B;
}
.menuBox .list .num{
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;    
    color:#000;
    text-align: right;
}
.phcolor{
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(67,67,67,1);
}
.menuBox .list .codeNum{
    text-align: left
}
.getCode{
    width:145rpx;
    height:60rpx;
    line-height:60rpx;
    background: none;
    border:2rpx solid rgba(65,136,241,1);
    font-size:32rpx;
    font-weight:400;
    color:rgba(8,110,224,1);
    background:rgba(217,223,255,1);
    border-radius:10rpx;
    font-family:MicrosoftYaHeiUI;
}
.btnArea{
    clear: both;
    position: absolute;
    bottom: 10%;
    left:5%;
    width: 90%;
}
.btnArea button{
    width: 100%;
    height:100rpx;
    background:rgba(8,110,224,1);
    border-radius:20rpx;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(255,255,255,1);
}