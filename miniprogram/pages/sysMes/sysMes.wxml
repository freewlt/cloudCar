<!--pages/sysMes/sysMes.wxml-->
<view class="container">
    <navbar title="{{title}}"></navbar>
    <view class='topTabSwiper'>
        <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}'  data-current = "0" bindtap='checkCurrent'>未读</view>
        <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}'  data-current = "1" bindtap='checkCurrent'>已读</view>
    </view>
    <swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
        <swiper-item>
            <view class="swiper_con"> 
                <view class="messList" wx:for="{{messList}}" wx:key="item.id">
                    <text class="hint">{{item.message}}</text>
                    <text class="time">{{item.time}}</text>
                </view>
            </view>
        </swiper-item> 
        <swiper-item>
            <view class="swiper_con"> 
                <view class="messList" wx:for="{{messList}}" wx:key="item.id">
                    <text class="hint">{{item.message}}</text>
                    <text class="time">{{item.time}}</text>
                </view>
            </view>
        </swiper-item>
    </swiper>
</view> 

