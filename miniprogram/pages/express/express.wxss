/* pages/express/express.wxss */
navbar{
    width: 100%;
}
.phcolor{
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(44,44,44,1);
}
.content{
    width:100%;
}
.detailName{
    display: block;
    width: 94%;
    height: 70rpx;
    line-height: 70rpx;
    margin-left:6%;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:#3e3e3e;
    border-bottom:2rpx solid rgba(233,233,233,1);
}
.listBox{
    clear: both;
    width: 94%;
    margin-left:6%;
    padding:20rpx 0;
    border-bottom:2rpx solid rgba(233,233,233,1);
}
.listBox .titleName{
    display: block;
    width: 100%;
    padding-bottom:20rpx;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(111,111,111,1);
}
.listBox .inputDetail{
    width: 100%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(44,44,44,1);
}
.listBox  .detail{
    display:flex;
    justify-content:space-around;
    align-items:center;
}
.listBox  .detail .arrow{
    width:15rpx;
    height:26rpx;
    padding: 0 26rpx 0;
}
.seaBox  .detail{
    justify-content:left;
}
.numList{
    width:144rpx;
    height:58rpx;
    line-height:58rpx;
    box-sizing:content-box;
    margin: 0 11px 0 0;
    padding: 0;
    text-align: center;
    font-size:32rpx;
    background:rgba(255,255,255,1);
    border:1rpx solid rgba(166,166,166,1);
    border-radius:10rpx;
}
.numListSelect{
    background:rgba(217,223,255,1);
    border:1rpx solid rgba(8,110,224,1);
    color:#086EE0;
}
.weight{
    padding-right:6%;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:rgba(8,110,224,1);
}
.detialListBox .detail{
    width:97%;
    padding-right:3%;
}
.detailList{
    width:110rpx;
    height:60rpx;
    padding:0;
    line-height:60rpx;
    box-sizing:content-box;
    background:rgba(255,255,255,1);
    border:1rpx solid rgba(166,166,166,1);
    border-radius:10rpx;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(0,0,0,1);
}


.deliveryInfoBox .detailTop{
    display: flex;
    justify-content:space-between;

}
.deliveryInfoBox .inputDetail text{
    display: block;
    font-size:32rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:#000;
}
.deliveryInfoBox .inputDetail .address{
    padding-top: 10rpx;
    font-size:26rpx;
    font-family:MicrosoftYaHeiUI-Bold;
    font-weight:bold;
    color:#6e6e6e;
}

.btnArea{
    clear: both;
    width: 90%;
    margin: 80rpx auto;
}
.btnArea button{
    width: 100%;
    height:100rpx;
    background:rgba(8,110,224,1);
    border-radius:20rpx;
    font-size:36rpx;
    font-family:MicrosoftYaHeiUI;
    font-weight:400;
    color:rgba(255,255,255,1);
}